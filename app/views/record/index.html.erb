<div class="text-center">
	<h1>SISTEMA DE REGISTRO	</h1>
</div>
<div class="row top-buffer">
	<div class="col-md-12">
		<div class="row">
			<div class="form-group">
				<%= form_tag(student_index_path, method: 'get', role: 'form') do %>
				<div class="col-md-4">
					<%= text_field_tag :paternal, '', {class: 'form-control', placeholder: 'Apellido paterno'} %>
				</div>
				<div class="col-md-4">
					<%= text_field_tag :maternal, '', {class: 'form-control', placeholder: 'Apellido materno'} %>
				</div>
				<div class="col-md-2">
					<%= submit_tag 'Buscar', class: 'btn' %>
				</div>
				<div class="col-md-2">
					<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#modal_create_student">Nuevo Alumno <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
					</button>
				</div>
				<% end %>
			</div>
		</div>

	</div>
	<div class=""></div>
</div>
<div id="table">
	<%= render 'table' %>
</div>
<div class="col-md-8">
	<div class="modal fade" id="modal_create_student" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel"><center><b>INGRESAR ALUMNO</b></center></h4>
				</div>
				<div class="modal-body">
					<%= render 'form' %>
				</div>
			</div>
		</div>
	</div>
</div>